{
  "manifest_version": 3,
  "name": "KuikMsg 1.0",
  "version": "1.0",
  "description": "Extensão para enviar mensagens rápidas no tek.digisac.app",
  "author": "KuikMsg Team",
  "homepage_url": "https://github.com/kuikmsg/extension",
  
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://tek.digisac.app/*"
  ],
  
  "action": {
    "default_title": "KuikMsg 1.0",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "content_scripts": [
    {
      "matches": ["https://tek.digisac.app/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["style.css"],
      "matches": ["https://tek.digisac.app/*"]
    }
  ],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "kuikmsg@example.com",
      "strict_min_version": "109.0"
    }
  }
}